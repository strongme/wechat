			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<url>${serverurl}/manager/text</url>
					<username>${username}</username>
					<password>${password}</password>
					<path>/wechat</path>
				</configuration>
				<executions>
					<execution>
						<id>to-deploy</id>
						<phase>install</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
					</execution> 
					<execution>
						<id>to-undeploy</id>
						<phase>clean</phase>
						<goals>
							<goal>undeploy</goal>
						</goals>
					</execution> 
