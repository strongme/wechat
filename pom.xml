	<profiles>
		<profile>
			<!-- 部署到远程服务器 mvn clean install -Dlocation=remote 下面这个serverurl需要根据自己的本地端口修改 -->
			<id>remote-install</id>
			<properties>
				<serverurl>http://do.strongme.cn:8080</serverurl>
				<username>admin</username>
				<password>admin</password>
			</properties>
			<activation>
				<property>
					<name>location</name>
					<value>remote</value>
				</property>
			</activation>
		</profile>
		<profile>
			<!-- 部署到本地 mvn clean install -Dlocation=local 下面这个serverurl需要根据自己的本地端口修改 -->
